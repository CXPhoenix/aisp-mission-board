# For connecting with mongodb server
ME_CONFIG_MONGODB_ADMINUSERNAME=root
ME_CONFIG_MONGODB_ADMINPASSWORD=rootroot
ME_CONFIG_MONGODB_URL=mongodb://root:rootroot@mongo:27017/

# mongo express configurations
ME_CONFIG_BASICAUTH=true
ME_CONFIG_BASICAUTH_USERNAME=root
ME_CONFIG_BASICAUTH_PASSWORD=password
ME_CONFIG_SITE_COOKIESECRET=<your-cookie-secret>
ME_CONFIG_SITE_SESSIONSECRET=<your-session-secret>